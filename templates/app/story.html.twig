{% extends 'base.html.twig' %}

{% block title %}Makaira Story{% endblock %}

{% block body %}
    <div class="makaira-app__story">
        <div class="story-item story-item--with-col">
            <div class="story-item__col">
                {{ component('textarea', {}) }}
            </div>
            <div class="story-item__col">
                {{ component('textarea', { disabled: true, title: 'Title disabled' }) }}
            </div>
            <div class="story-item__col">
                {{ component('textarea', { error: 'Textarea error now' }) }}
            </div>
        </div>
        <div class="story-item">
            {{
                component('checkbox', {})
            }}
        </div >
        <div class="story-item">
            {{
                component('checkbox', {
                    name: 'chk_2',
                    disabled: true
                })
            }}
        </div >
        <div class="story-item story-item--with-col">
            <div class="story-item__col">
                {{ component('select', {}) }}
            </div>
            <div class="story-item__col">
                {{ component('select', {title: "Select disabled",disabled: true}) }}
            </div>
        </div>
        <div class="story-item">
            {{ 
                component('button', {
                    variant: 'primary',
                    children: 'Primary',
                    disabled: false,
                    icon: 'star',
                }) 
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'primary',
                    children: 'External Link',
                    disabled: false,
                    href: 'https://www.example.com',
                    isExternalLink: true,
                })
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'primary',
                    children: 'Internal Link',
                    disabled: false,
                    href: 'component_list',
                    isExternalLink: false
                })
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'primary',
                    children: 'Primary disable',
                    onClick: '',
                    disabled: true,
                    icon: 'star',
                }) 
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'secondary',
                    children: 'Secondary',
                    onClick: '',
                    disabled: false,
                    icon: 'star',
                }) 
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'primary-blocker',
                    children: 'Primary blocker',
                    onClick: '',
                    disabled: true,
                    icon: 'xmark',
                }) 
            }}
        </div>
        <div class="story-item">
            {{
                component('button', {
                    variant: 'secondary-blocker',
                    children: 'Secondary Blocker',
                    onClick: '',
                    disabled: false,
                    icon: 'xmark',
                })
            }}
        </div>
        <div class="story-item story-item--with-col">
            <div class="story-item__col">
                {{ component('radio', {}) }}
            </div>
             <div class="story-item__col">
                {{ component('radio', {size: 'large'}) }}
            </div>
        </div>
        <div class="story-item">
            {{
                component('textinput', {})
            }}
        </div>
        <div class="story-item">
            {{
                component('textinput', { title: "Input disabled", disabled: true })
            }}
        </div>
        <div class="story-item">
            {{ component('page-title', { prefix: '', suffix: ''}) }}
        </div>
        <div class="story-item">
              {{ component('page-title')}}
        </div>

        <div class="story-item story-item--with-col">
            <div class="story-item__col">
                {{ component('heading', {}) }}
            </div>
             <div class="story-item__col">
                {{ component('heading', {children: 'Page heading h4',level: 4}) }}
            </div>
        </div>

        <div class="story-item story-item--with-col-grid">
            <div class="story-item__col">
                {{ component('dashboard-app')}}
            </div>
            <div class="story-item__col">
                {{ component('dashboard-app', { text: 'Components', icon: 'toolbox', badge: 'Sale'})}}
            </div>
            <div class="story-item__col">
                {{ component('dashboard-app', { text: 'Bundles', icon: 'box-open-full', badge: ''})}}
            </div>
        </div>

    </div>
{% endblock %}