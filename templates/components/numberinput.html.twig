{# templates/components/numberinput.html.twig #}
<div class="number-input {% if disabled == true %} number-input__disabled {% endif %}">
    {% if customLabel is defined and customLabel is not empty %}
        <label class="text--bravo number-input__label">{{ customLabel | raw }}</label>
    {% elseif title is defined and title is not empty %}
        <label class="text--bravo number-input__label">{{title}}</label> 
    {% endif %}
    <div class="number-input__panel">
        {% if customInput is defined and customInput is not empty %}
            {{ customInput | raw }}
        {% else %}
            <input class="number-input__input" 
                type="number" 
                id="{{id}}"
                placeholder="{{placeholder}}" 
                name="{{name}}"
                min="{{minValue}}" 
                max="{{maxValue}}" 
                value="{{value}}"
                {% if disabled == true %} disabled {% endif %}
            />
        {% endif %}
        <div class="number-input__control-panel">
            <button type='button' class="number-input__button increaseBtn">
                <span class="number-input__button-icon icon icon--angle-up">
                <svg role="img">
                    <use xlink:href="#angle-up"></use>
                </svg>
                </span>
            </button>
            <button type='button' class="number-input__button decreaseBtn">
                <span class="number-input__button-icon icon icon--angle-down">
                <svg role="img">
                    <use xlink:href="#angle-down"></use>
                </svg>
                </span>
            </button>
        </div>
    </div>
</div>